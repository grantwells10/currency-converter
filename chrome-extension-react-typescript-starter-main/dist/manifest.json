{
    "manifest_version": 3,
    "name": "Currency Exchange Rates",
    "version": "1.0",
    "offline_enabled": true,
  "permissions": ["storage", "activeTab", "contextMenus", "scripting"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
    "host_permissions": [
      "http://api.currencylayer.com/*"], 
  "action": {
    "default_popup": "index.html"
  }, "content_scripts": [
    {
        "js": ["content.js"],
        "matches": [
            "https://*/*"
        ]
    }
]
}
